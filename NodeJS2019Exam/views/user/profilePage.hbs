<h1>My Profile</h1>
<div class="profile-box">
    <img alt="profile" src="{{user.profilePicture}}">
    <div class="profile">
        <div class="info">
            <h3>My Teams</h3>
            {{#each user.teams}}
                <form action="/leave/{{_id}}" method="post">
                    <p>{{name}}</p>
                    <input type="submit" value="Leave Team">
                </form>
                {{else}}
                <p>You have no teams</p>
            {{/each}}
        </div>
        <div class="more-info">
            <h3>My Projects</h3>
            {{#each projects}}
                <p>{{name}}</p>
                {{else}}
                <p>You have no projects!</p>
                {{/each}}
        </div>
    </div>
</div>