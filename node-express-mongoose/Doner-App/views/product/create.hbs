{{> header}}
<main>
    <form action="/product/create" method="post">
        <h2>Create Product</h2>
        {{#if error}}
            <p class="error">{{error}}</p>
        {{/if}}
        <div>
            <label for="category">Category</label>
            <select name="category" id="category">
                <option value="beef" selected="{{formData.category}}">Beef</option>
                <option value="chicken" selected="{{formData.category}}">Chicken</option>
                <option value="lamb" selected="{{formData.category}}">Lamb</option>
            </select>
        </div>
        <div>
            <label for="imageUrl">Image Url</label>
            <input id="imageUrl" name="imageUrl" type="text" value="{{formData.imageUrl}}">
        </div>
        <div>
            <label for="size">Size</label>
            <input id="size" name="size" type="number" value="{{formData.size}}">
        </div>
        <div>
            <strong>Toppings</strong><br>
            <textarea name="toppings">{{formData.toppings}}</textarea>
        </div>
        <div>
            <input type="submit" value="Create" class="button" style="border:0"/>
        </div>
    </form>
</main>
{{> footer}}