{{> header}}
{{#if message}}
    <div class="message">{{message}}</div>
{{/if}}
<h1>Here are your memes</h1>
<div class="container">
    {{#each memes}}
        {{> meme}}
    {{else}}
        <div>There are currently no memes!</div>
    {{/each}}
</div>
{{#if pages}}
<div id="paginator" class="pagination">
    <a href="/{{direction}}/:page={{prevPage}}">&laquo;</a>
    {{#each pages}}
        {{> paginator}}
    {{/each}}
    <a href="/{{direction}}/:page={{nextPage}}">&raquo;</a>
</div>
{{/if}}
{{> footer}}