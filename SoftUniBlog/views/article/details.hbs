{{> header}}
<div class="container body-content">
    <div class="row">
        <div class="col-md-12">
            <article>
                <header>
                    <h2>ar{{article.title}}</h2>
                </header>

                <p>
                    {{article.content}}
                </p>

                <small class="author">
                    {{article.fullName}}
                </small>

                <small>
                    {{date}}
                </small>

                <footer>
                    <div class="pull-right">
                        <!-- Only for admins or author-->
                        {{#if isAuth}}
                            <a class="btn btn-success btn-xs" href="/article/edit/{{article._id}}">Edit &raquo;</a>
                            <a class="btn btn-danger btn-xs" href="/article/delete/{{article._id}}">Delete &raquo;</a>
                        {{/if}}
                        <a class="btn btn-default btn-xs" href="/">Back &raquo;</a>
                    </div>
                </footer>
            </article>
        </div>
    </div>
</div>
{{> footer}}